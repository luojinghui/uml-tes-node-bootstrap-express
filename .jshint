{
    "bitwise"   : true,    //禁用位运算符，位运算符在 JavaScript 中使用较少，经常是把 && 错输成 &
    "curly"     : true,      //循环或者条件语句必须使用花括号包围
    "eqeqeq"    : true,      //强制使用三等号以及!==
    "es3"       : true,         //兼容低级浏览器 IE 6/7/8/9写法
    "es5"       : true,         //此选项使语法中的ECMAScript5.1规范使用
    "freeze"    : true,     //检测是否覆盖原生的prototype函数
    "latedef"   : true,    //禁止定义之前使用变量，忽略 function 函数声明
    "maxdepth"  : 4,      //检查函数嵌套的层数不能大于四
    "newcap"    : true,     //构造器函数首字母大写
    "unused"    : true,     //变量未使用
    "asi"       : true,    //检查是否需要分号警示
    "boss"      : true,   //检查for循环

    "browser"   : true //预定义全局变量 document ， navigator ， FileReader 等
    "node"      : true,
    "jasmine"   : true
}
